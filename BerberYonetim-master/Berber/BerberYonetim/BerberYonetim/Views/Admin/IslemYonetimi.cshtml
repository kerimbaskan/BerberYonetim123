@model IEnumerable<BerberYonetim.Models.Islem>

<h2>İşlem Yönetimi</h2>
<p>Bu sayfada işlemler eklenebilir, düzenlenebilir ve silinebilir.</p>

@if (TempData["Basari"] != null)
{
    <div class="alert alert-success">@TempData["Basari"]</div>
}

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-danger">@TempData["Mesaj"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Süre</th>
            <th>Ücret</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var islem in Model)
        {
            <tr>
                <td>@islem.Ad</td>
                <td>@islem.Sure</td>
                <td>@islem.Ucret</td>
                <td>
                    
                    <form asp-action="SilIslem" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@islem.Id" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bu işlemi silmek istediğinize emin misiniz?');">
                            Sil
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="IslemEkle" class="btn btn-success">Yeni İşlem Ekle</a>
