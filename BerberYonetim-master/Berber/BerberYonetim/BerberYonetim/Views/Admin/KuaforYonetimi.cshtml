@model IEnumerable<BerberYonetim.Models.Kuafor>

<h2>Kuaför Yönetimi</h2>
<p>Bu sayfada kuaför ekleme, düzenleme ve silme işlemleri yapılabilir.</p>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Telefon</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kuafor in Model)
        {
            <tr>
                <td>@kuafor.Ad</td>
                <td>@kuafor.Telefon</td>
                <td>@kuafor.CalismaSaatleri</td>
                <td>
                    <form asp-action="KuaforSil" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@kuafor.Id" />
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Bu kuaförü silmek istediğinize emin misiniz?');">
                            Sil
                        </button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

<a asp-action="KuaforEkle" class="btn btn-success">Yeni Kuaför Ekle</a>
