<div class="form-container">
    <h2 class="text-warning text-center mb-4">Giriş Yap</h2>

    @if (ViewBag.Hata != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            @ViewBag.Hata
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="GirisYap" method="post" class="form-box">
        <div class="form-group mb-3">
            <label for="email" class="text-warning">E-posta</label>
            <input type="email" name="email" class="form-control form-control-lg border-warning" placeholder="E-posta adresinizi girin" required />
        </div>
        <div class="form-group mb-3">
            <label for="sifre" class="text-warning">Şifre</label>
            <input type="password" name="sifre" class="form-control form-control-lg border-warning" placeholder="Şifrenizi girin" required />
        </div>
        <button type="submit" class="btn btn-warning btn-lg w-100">Giriş Yap</button>
    </form>
</div>
